@model OnlineStore.Models.Category

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="wrapper">
    <partial name="_AdminSideNavbar" />
    <div id="content-wrapper" class="d-flex flex-column">
        <div id="content">
            <!-- Topbar -->
            <!-- Topbar -->
            <partial name="_AdminTopBar" />
            <!-- End of Topbar -->

            <div class="container-fluid">
                <div class="table-responsive">
                    <h2>Edit</h2>
                    <h4>Parts</h4>
                    <hr />
                    <div class="row">
                        <div class="col-md-4">
                            <form method="post" asp-action="Edit">
                                <div class="border p-3 mt-4">
                                    <div class="row pb-2">
                                        <h2 class="text-primary">Edit Category</h2>
                                        <hr />
                                    </div>
                                    @*<div asp-validation-summary="All"></div>*@
                                    <div class="mb-3">
                                        <label asp-for="Name"></label>
                                        <input asp-for="Name" class="form-control" />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                    <div class="mb-3">
                                        <label asp-for="DiplayOrder"></label>
                                        <input asp-for="DiplayOrder" class="form-control" />
                                        <span asp-validation-for="DiplayOrder" class="text-danger"></span>
                                    </div>
                                    <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
                                    <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px">
                                        Back to List
                                    </a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /#page-content-wrapper -->

        </div>
        <!-- /#wrapper -->
    </div>
</div>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}